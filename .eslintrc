{
  "parser": "babel-eslint",
  "rules": {
    "semi": [
      2,
      "always"
    ]
  },
  "env": {
    "browser": "true",
    "mocha": "true",
  },
  {
    "plugins": [
      "react"
    ]
  },
  {
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    }
  },
  {
    "settings": {
      "react": {
        "pragma": "React" // Pragma to use, default to "React"
      }
    }
  },
  "extends": "eslint:recommended"
}
